{
  "name": "rails-i18n",
  "displayName": "Rails I18n",
  "description": "Completion, Hover and QuickFix provider for Rails I18n.",
  "version": "0.4.0",
  "publisher": "aki77",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-rails-i18n.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-rails-i18n/issues"
  },
  "activationEvents": [
    "onLanguage:ruby",
    "onLanguage:haml",
    "onLanguage:erb",
    "onLanguage:slim"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "railsI18n.reload",
        "category": "Rails I18n",
        "title": "Reload locale files"
      },
      {
        "command": "railsI18n.gotoTranslation",
        "category": "Rails I18n",
        "title": "Go to Translation"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rails I18n Configuration",
      "properties": {
        "railsI18n.translateMethods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "I18n.translate",
            "I18n.t",
            "t"
          ],
          "description": "I18n translate methods"
        },
        "railsI18n.localizeMethods": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "I18n.localize",
            "I18n.l",
            "l"
          ],
          "description": "I18n localize methods"
        },
        "railsI18n.localeFilePattern": {
          "type": "string",
          "default": "config/locales/*.yml",
          "description": "I18n locale file glob pattern"
        },
        "railsI18n.priorityOfLocales": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "en"
          ],
          "description": "Priority locales list"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/flat": "5.0.1",
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^4.0.0",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.55.0",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.5.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "escape-string-regexp": "4.0.0",
    "flat": "^5.0.0",
    "lodash": "^4.17.19",
    "yaml": "^1.10.0"
  }
}
